<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/TitleBarMovie_tab"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/titleTextMovie_tab"
        android:layout_alignTop="@id/TitleBarMovie_tab"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/TitleBarMovie_tab"
        android:layout_marginLeft="7dp"
        android:gravity="center"
        android:textSize="19sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/BackButton5_tab"
        android:background="@android:color/transparent"
        android:src="@drawable/back_button"
        android:layout_alignTop="@id/TitleBarMovie_tab"
        android:onClick="goBack"
        android:layout_alignBottom="@id/TitleBarMovie_tab"
        android:layout_alignLeft="@id/TitleBarMovie_tab"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_below="@+id/titleTextMovie_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_below="@+id/TitleBarMovie_tab_tab"
            android:layout_width="match_parent"
            android:id="@+id/relativeForScroll_tab"
            android:layout_height="match_parent">



            <android.support.v7.widget.CardView
                android:translationZ="2dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/poster_card_tab"
                android:layout_width="290dp"
                android:layout_height="350dp">
                <ImageView
                    android:id="@+id/MoviePoster_tab"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>




            <ImageView
                android:id="@+id/release_logo_tab"
                android:layout_below="@+id/poster_card_tab"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/poster_card_tab"
                android:src="@drawable/release_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/release_date_text_tab"
                android:layout_below="@+id/poster_card_tab"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/release_logo_tab"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/vote_logo_tab"
                android:layout_below="@id/poster_card_tab"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/vote_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/vote_text_tab"
                android:layout_below="@+id/poster_card_tab"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/vote_logo_tab"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/trailer_button_tab"
                android:src="@drawable/video_a"
                android:layout_alignEnd="@+id/poster_card_tab"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:layout_below="@+id/poster_card_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:id="@+id/favCard_tab"
                android:layout_below="@id/vote_logo_tab"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="30dp"
                android:translationZ="2dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorAccent"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/favCLick_tab"
                    android:src="@drawable/fav"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/synopsis_text_tab"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/favCard_tab"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_width="290dp"
                android:layout_height="wrap_content" />



            <Button
                android:id="@+id/reviews_tab"
                android:background="@color/colorPrimary"
                android:text="Reviews"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/synopsis_text_tab"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                android:layout_width="250dp"
                android:layout_height="50dp" />


        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/curtain"
        android:background="@color/colorPrimary"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</RelativeLayout>

